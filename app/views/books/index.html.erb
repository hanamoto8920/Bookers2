
<!--一覧部分-->
<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>

   <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

  <p>Opinion</p>
  <span><%= book.body %></span>

<% end %>




<!--投稿部分-->
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: book_path(book.id), local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>